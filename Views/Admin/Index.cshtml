@{
    ViewBag.Title = "ViewAllCustomers";
    Layout = null;
}

<html>
<head>
    <link href=" bootstrap.css" rel="stylesheet">
    <script src="bootstrap.js"></script>
    <title>Rahat Bakers & Departmental Store</title>
</head>

<body style="background-color:aliceblue">
    <div class="jumbotron" style="background-color:ButtonHighlight">
        <div class="container text-center">
            <h1 class="badge" style="color:ButtonFace">Login</h1>
        </div>
        

        <div class="container" style="background-color:ButtonFace">

            <div class="row">
                <div class="col-sm-6 col-md-4 col-md-offset-4" style="background-color:royalblue">
                    <h1 class="text-center login-title" style="color:red">Login to continue</h1>
                    <div class="account-wall">
                        <form method="post" action="~/Admin/Login">
                            <input type="text" class="form-control" placeholder="Username" name="username" required autofocus><br>
                            <input type="password" class="form-control" placeholder="Password" name="password" required><br>
                            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Login"/>
                        </form>
                    </div>
                    <br />
                </div>
            </div>
        </div>
        
            <h1 class="label-info" style="color:red">@ViewBag.msg</h1>
        
    </div>
</body>
</html>
